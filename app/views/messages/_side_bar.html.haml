.side-bar
  .side-bar__header
    .side-bar__header__h3
      %b.user_name
        = current_user.name
      %ul.side-bar__header__h3__ul
        %li.list
          =link_to edit_user_path(current_user) do
            =fa_icon 'cog', class: 'cog_icon'
        %li.list
          =link_to new_group_path do
            =fa_icon 'pencil-square-o', class: 'edit_icon'

  .side-bar__content
    - current_user.groups.each do |group|
      = link_to group_messages_path(group.id), class: "group-message-link" do
        %ul
          %li.group-name
            = group.name
          %li.message-text
            = group.show_last_message
